    <StackPanel Background="White">
        <Grid Name="LogoTable">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Name="FromLogo" Grid.Column="0" HorizontalAlignment="Left"></Image>
            <Label HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" FontSize="40">Manifest</Label>
            <Image Name="ToLogo" Grid.Column="2" HorizontalAlignment="Right"></Image>
        </Grid>
        <Grid Name="ManifestTable">
        </Grid>
    </StackPanel>
</UserControl>
